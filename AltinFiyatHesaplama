            </a>

            <div class="tool-box">
                <div class="tool-header">
                    <h1><span style="color:var(--primary)">Gram Altın</span> Hesaplayıcı</h1>
                    <p>Ons fiyatı ve dolar kuru üzerinden gram altın fiyatının olması gereken değerini hesaplayın.</p>
                </div>

                <!-- Input Alanları -->
                <div class="grid-row">
                    <div class="form-group">
                        <label>Ons Altın Fiyatı (USD)</label>
                        <div class="input-wrapper">
                            <i class="fas fa-globe-americas"></i>
                            <input id="onsPrice" type="number" placeholder="Örn: 2000" min="0" step="0.01">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Dolar/TL Kuru</label>
                        <div class="input-wrapper">
                            <i class="fas fa-lira-sign"></i>
                            <input id="usdRate" type="number" placeholder="Örn: 30.50" min="0" step="0.0001">
                        </div>
                    </div>
                </div>

                <button class="btn-calc" id="btnHesapla">
                    HESAPLA <i class="fas fa-calculator"></i>
                </button>

                <div class="error-msg" id="errorMessage"></div>

                <div id="resultCard">
                    <div class="stats-grid">
                        <div class="stat-box single-result">
                            <span id="resCalculatedGramPrice" class="stat-value">--</span>
                            <span class="stat-label">Teorik Gram Altın Fiyatı</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        // --- Değişkenler ve Seçiciler ---
        const btnHesapla = document.getElementById("btnHesapla");
        const inputs = document.querySelectorAll("input");

        // Formatlayıcı (Para birimi için)
        const trCurrency = new Intl.NumberFormat('tr-TR', {
            style: 'currency',
            currency: 'TRY',
            minimumFractionDigits: 2
        });

        // --- Event Listeners ---
        document.addEventListener('DOMContentLoaded', () => {
            // Hesapla Butonu
            btnHesapla.addEventListener('click', hesapla);

            // Enter Tuşu Desteği
            inputs.forEach(input => {
                input.addEventListener("keypress", function(event) {
                    if (event.key === "Enter") {
                        event.preventDefault();
                        hesapla();
                    }
                });
            });
        });

        // --- Arayüz Yönetimi ---
        function hideResults() {
            document.getElementById("resultCard").style.display = "none";
            document.getElementById("errorMessage").style.display = "none";
        }

        function showError(msg) {
            hideResults();
            const errDiv = document.getElementById("errorMessage");
            errDiv.textContent = msg;
            errDiv.style.display = "block";
        }

        function hesapla() {
            // Değerleri al
            const onsPrice = parseFloat(document.getElementById("onsPrice").value);
            const usdRate = parseFloat(document.getElementById("usdRate").value);
            
            // --- Validasyon ---
            if (isNaN(onsPrice) || onsPrice <= 0) {
                showError("Lütfen geçerli bir Ons Altın fiyatı girin."); return;
            }
            if (isNaN(usdRate) || usdRate <= 0) {
                showError("Lütfen geçerli bir Dolar kuru girin."); return;
            }

            hideResults();

            // --- Hesaplama ---
            // Formül: (Ons / 31.1035) * Dolar Kuru
            const gramPriceTL = (onsPrice / 31.1035) * usdRate;

            // --- Sonucu Ekrana Yazma ---
            const resultCard = document.getElementById("resultCard");
            
            document.getElementById("resCalculatedGramPrice").textContent = trCurrency.format(gramPriceTL);

            // Sonucu göster
            resultCard.style.display = "block";
            // Sonuca kaydır
            resultCard.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
    </script>
</body>
